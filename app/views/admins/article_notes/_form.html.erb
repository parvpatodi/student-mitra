<%= form_for [:admins, @article_note], :html => { :class => "form-horizontal article_note" } do |f| %>

  <% if @article_note.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@article_note.errors.count, "error") %> prohibited this article_note from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @article_note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :question, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :question, :class => 'form-control' %>
    </div>
    <%=f.error_span(:question) %>
  </div>
  <div class="form-group">
    <%= f.label :answer, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :answer, :class => 'form-control ckeditor' %>
    </div>
    <%=f.error_span(:answer) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admins_article_notes_path, :class => 'btn btn-default' %>
    </div>
  </div>

  <script>
  $(document).ready(function()){
    $('.ckeditor').ckeditor({

    });
  });
</script>

<% end %>

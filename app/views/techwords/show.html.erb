<div class="well">
  <h1 class="text-center"><%= @techword.name %></h1>
</div>

<%= @techword.definition.html_safe %>
<div class="well">
  <h1 class="text-center">Comments</h1>
</div>
<%= render "comments/new_techword_comment" %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn btn-default'  %>

<%if @techword.comments.present? %>
 <div class="well">
  <h1 class="text-center">Comments posted by users </h1>
</div>
<% @techword.comments.each do |comment| %>
  <p><strong> <%=comment.user.email%> says </strong>: <%= comment.comment_text %></p>
  <p><strong> on </strong>: <%= comment.created_at.strftime("%b-%d-%Y") %></p>
  <%end%>
<%end%>





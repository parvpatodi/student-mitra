<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Definition</th>
      </tr>
    </thead>
    <tbody>
      <% @techwords.each do |techword| %>
        <tr>
          <td><%= link_to techword.name, techword_path(techword) %></td>
          <td><%= techword.definition.html_safe %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
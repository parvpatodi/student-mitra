<%- model_class = Techword -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= search_form_for @q do |f| %>

  <div class="col-md-8">
    <%= f.search_field :name_cont, class: "form-control",placeholder: "Search Here.." %>
  </div>
  <%#= f.label :articles_title_start %>
  <%#= f.search_field :articles_title_start %>
  <div class="col-md-4">
    <%= f.submit  class: "btn btn-primary" %>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:definition) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @techwords.each do |techword| %>
      <tr>
        <td><%= link_to techword.name, techword_path(techword) %></td>
        <td><%= techword.definition.html_safe %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_techword_path(techword), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      techword_path(techword),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_techword_path,
            :class => 'btn btn-primary' %>
